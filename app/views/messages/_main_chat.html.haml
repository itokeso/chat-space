.chat-main
  .chat-main__header
    .chat-main__header__left
      .chat-main__header__left__group 
        = @group.name
      .chat-main__header__left__member
        member :
        - @group.users.each do |user|
          = user.name
    =link_to "Edit", edit_group_path(@group), class:'chat-main__header__edit-btn'

  .chat-main__content
    .chat-main__content__box
      = render @messages

  .chat-main__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box', placeholder: 'type a message'
      .form-mask
        = f.label :image, class: 'input-box__text' do
          = icon('fas', 'image', class: 'input-box__image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'

      